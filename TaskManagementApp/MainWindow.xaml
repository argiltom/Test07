<Window x:Class="TaskManagementApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TaskManagementApp"
        mc:Ignorable="d"
        Title="MainWindow" Height="1024" Width="1280">
    <Grid>
        <Button x:Name="sortOfImportance" Content="重要度順" HorizontalAlignment="Left" Margin="52,10,0,0" VerticalAlignment="Top" Width="175" Background="#00DDDDDD" Height="95"/>
        <Rectangle HorizontalAlignment="Left" Height="95" Stroke="Black" VerticalAlignment="Bottom" Width="1262" Fill="#00000000" Margin="0,0,0,888"/>
        <Button x:Name="sortOfLimit" Content="期限順" HorizontalAlignment="Left" Margin="227,10,0,0" VerticalAlignment="Top" Width="175" Background="#00DDDDDD" Height="95" RenderTransformOrigin="0.817,0.542"/>
        <TextBlock x:Name="nowTimeView" HorizontalAlignment="Left" Margin="954,31,0,0" TextWrapping="Wrap" Text="現在時刻" VerticalAlignment="Top" Height="46" Width="256" Foreground="#FF020000" RenderTransformOrigin="-0.778,-0.722" FontSize="30" TextAlignment="Center"/>
        <Button x:Name="notificateButton" Content="通知ON_OFF" HorizontalAlignment="Left" Margin="640,10,0,0" VerticalAlignment="Top" Width="280" Height="95"  RenderTransformOrigin="1.822,0.243"/>
        <TextBox x:Name="serchTextBox" HorizontalAlignment="Left" Height="120" TextWrapping="Wrap" Text="検索画面" VerticalAlignment="Top" Width="630" Margin="208,131,0,0" RenderTransformOrigin="0.54,0.663" FontSize="36"/>
        <Button x:Name="addTaskButton" Content="タスク追加" HorizontalAlignment="Left" Height="135" Margin="66,131,0,0" VerticalAlignment="Top" Width="100" RenderTransformOrigin="-0.135,0.296"/>
        <DataGrid x:Name="taskViewGrid" HorizontalAlignment="Left" Height="438" VerticalAlignment="Top" Width="826" Margin="114,326,0,0" IsReadOnly="True"/>
    </Grid>
</Window>
