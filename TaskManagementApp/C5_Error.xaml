<Window x:Class="TaskManagementApp.C5_Error"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TaskManagementApp"
        mc:Ignorable="d"
        Title="C5_Error" Height="450" Width="800">
    <Grid>
        <TextBlock HorizontalAlignment="Left" TextWrapping="Wrap" Text="{Binding Path=message}" FontSize="50" VerticalAlignment="Top"></TextBlock>
        <Button Content="CloseButton" HorizontalAlignment="Left" Margin="289,302,0,0" VerticalAlignment="Top" Width="158" Height="64" Click="Back"/>

    </Grid>
</Window>
